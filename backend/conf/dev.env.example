# Application Configuration
APP_NAME=fastapi-app
APP_VERSION=0.1.0
DEBUG=true

# Database Configuration
DATABASE_TYPE=PostgreSQL  # Can be "PostgreSQL" or "MySQL"

# PostgreSQL Configuration (if using PostgreSQL)
POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=example_db

# MySQL Configuration (if using MySQL)
MYSQL_USER=admin
MYSQL_PASSWORD=password
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=example_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Messaging Queue Configuration
MESSAGING_TYPE=None  # Can be "None", "ZMQ", "RabbitMQ", or "Kafka"

# ZMQ Configuration (if using ZMQ)
ZMQ_BIND_ADDRESS=tcp://*:5555
ZMQ_CONNECT_ADDRESS=tcp://localhost:5555

# RabbitMQ Configuration (if using RabbitMQ)
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_VHOST=/

# Kafka Configuration (if using Kafka)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=default_topic

# Security Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=30  # minutes

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=standard  # standard, detailed, json
LOG_FILE=logs/app.log

# Celery Configuration (if using)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# External API Configuration
EXTERNAL_API_BASE_URL=https://api.example.com/v1
EXTERNAL_API_KEY=your-api-key-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_PATH=uploads/

# Email Configuration (if needed)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your-password-here
SMTP_FROM_EMAIL=no-reply@example.com