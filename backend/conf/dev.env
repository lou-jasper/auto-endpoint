# FastAPI应用配置
# 开发环境

# 应用基本设置
APP_NAME=FastAPI应用
APP_VERSION=1.0.0
APP_DESCRIPTION=采用清晰架构的现代FastAPI应用
DEBUG=True

# CORS设置
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:5173"]

# 数据库设置
DATABASE_URL=postgresql://admin:password@localhost:5432/example_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis设置
REDIS_ENABLED=True
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT设置
SECRET_KEY=your-secret-key-here-please-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 日志设置
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/app.log

# Celery设置
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=180
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_WORKER_MAX_TASKS_PER_CHILD=100
CELERY_BROKER_VISIBILITY_TIMEOUT=3600

# 时区
TIMEZONE=UTC

# API速率限制
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# 外部API设置
EXTERNAL_API_BASE_URL=http://localhost:8000/api/v1
EXTERNAL_API_TIMEOUT=30

# 功能标志
ENABLE_FEATURE_X=False
ENABLE_FEATURE_Y=True
ENABLE_METRICS=True