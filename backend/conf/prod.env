# FastAPI Application Configuration
# Production Environment

# Application Basic Settings
APP_NAME=FastAPI Application
APP_VERSION=1.0.0
APP_DESCRIPTION=Modern FastAPI application with clean architecture
DEBUG=False

# CORS Settings - Restrict to specific domains in production
BACKEND_CORS_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]

# Database Settings - Use connection pooling optimized for production
DATABASE_URL=postgresql://admin:password@localhost:5432/example_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Settings
REDIS_ENABLED=True
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-secure-redis-password

# JWT Settings - Use a strong secret key in production
SECRET_KEY=CHANGE-THIS-TO-A-VERY-STRONG-SECRET-KEY-IN-PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Logging Settings
LOG_LEVEL=WARNING
LOG_FILE_PATH=/var/log/app/app.log

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=180
CELERY_WORKER_PREFETCH_MULTIPLIER=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=100
CELERY_BROKER_VISIBILITY_TIMEOUT=3600

# Timezone
TIMEZONE=UTC

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# External API Settings
EXTERNAL_API_BASE_URL=https://api.external-service.com/v1
EXTERNAL_API_TIMEOUT=15

# Feature Flags
ENABLE_FEATURE_X=False
ENABLE_FEATURE_Y=True
ENABLE_METRICS=True

# Security Settings
SECURE_COOKIES=True
CSRF_PROTECTION=True
ENABLE_RATE_LIMITING=True

# Performance Settings
ENABLE_CACHING=True
CACHE_TTL=3600
MAX_CONNECTIONS=1000